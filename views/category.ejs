<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= category.charAt(0).toUpperCase() + category.slice(1) %> Menu</title>
</head>
<body>
  <%- include('./partials/nav') %>
  <h1><%= category.charAt(0).toUpperCase() + category.slice(1) %> Menu</h1>
  <ul>
    <% menuItems.forEach(item => { %>
      <li>
        <strong><%= item.name %></strong> - $<%= item.price.toFixed(2) %> (Rating: <%= item.rating %>/5)
        <p><%= item.details %></p>
      </li>
    <% }) %>
  </ul>
</body>
</html>
